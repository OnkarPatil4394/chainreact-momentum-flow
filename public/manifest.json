{
  "name": "ChainReact - Build momentum. One habit at a time.",
  "short_name": "ChainReact",
  "description": "ChainReact — built with care by Vaion Developers. No ads. No tracking. No nonsense.",
  "author": "Vaion Developers",
  "start_url": "/",
  "id": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "orientation": "any",
  "background_color": "#ffffff",
  "theme_color": "#000000",
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "permissions": [
    "background-sync",
    "periodic-background-sync"
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      },
      "icons": [
        {
          "src": "https://onkarpatil4394.github.io/Chainreact-Assets/android-chrome-192x192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+chainreact",
      "url": "/import?data=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "widgets": [
    {
      "name": "Quick Add Habit",
      "description": "Quickly add a new habit completion",
      "tag": "quick-add",
      "template": "quick-add-widget",
      "ms_ac_template": "quick-add-adaptive-card.json",
      "data": "/widgets/quick-add-data.json",
      "type": "application/json",
      "screenshots": [
        {
          "src": "/screenshots/widget-screenshot.png",
          "sizes": "600x400",
          "label": "Quick Add Widget"
        }
      ],
      "icons": [
        {
          "src": "https://onkarpatil4394.github.io/Chainreact-Assets/android-chrome-192x192.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
